<div class="container">
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <div class="container-fluid">
                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Companies</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                          <div class="row container">
                            <div class="col-md-6" style="margin: auto;">
                                <h6 class="m-0 font-weight-bold text-primary">All Of Companies</h6>
                            </div>
                            <div class="col-md-6">
                                <%= button_to "Geri", companies_path, method: :get, class: "btn btn-danger float-right" %>                                
                            </div>  
                          </div>
                        </div>

                        <%= form_for(@contact, html: {'data-turbo' => "false"}) do |form| %>
                            <div class="container">
                            <%= form.label "Otel Adresi", class: "form-check-label" %>
                            <%= form.text_field :address, placeholder: 'Otel Adresiniz', class: "form-control" %> <br>
                            <%= form.label "Otel Telefon NumarasÄ±", class: "form-check-label" %>
                            <%= form.phone_field :phone, placeholder: 'Otel Telefon', class: "form-control" %> <br>
                            <%= form.label "Otel E-Posta", class: "form-check-label" %>
                            <%= form.text_field :address, placeholder: 'gunesler_otel@example.com', class: "form-control" %> <br>
                            <%= form.label "Otel Web Adresi", class: "form-check-label" %>
                            <%= form.text_field :website, placeholder: 'www.guneslerotel.example.com', class: "form-control" %> <br>
                            <%= form.label "Otel Konum-X", class: "form-check-label" %>
                            <%= form.text_field :location_x, placeholder: '41.2784187', class: "form-control" %> <br>
                            <%= form.label "Otel Konum-Y", class: "form-check-label" %>
                            <%= form.text_field :location_y, placeholder: '27.9964641', class: "form-control" %> <br><br>
                            
                            <%= form.submit "Kaydet", class:"btn btn-primary" %>

                            </div>
                        <% end %>

                         </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

    </div>
</div>