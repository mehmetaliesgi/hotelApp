<div class="container">
  <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Oda Düzenle</h1>
                    

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                          <div class="row container">
                            <div class="col-md-6" style="margin: auto;">
                                <h6 class="m-0 font-weight-bold text-primary">Oda Bilgileri</h6>
                                <%= "<div>#{@room.errors.full_messages.first}</div>".html_safe if @room.errors.any? %>   
                            </div>
                            <div class="col-md-6">
                                <%= button_to "Geri", room_path, method: :get, class: "btn btn-danger float-right" %>        
                            </div>  
                          </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="table-responsive">
                              <%= form_for @room, url: {action: :room_update}, html: {'data-turbo' => "false"} do |form| %>
                                <div class="container">
                                  <%= form.label "Oda Numarası", class: "form-check-label" %>
                                  <%= form.number_field :number, placeholder: '42', class: "form-control", pattern: "[0-9.]+" %> <br>
                                  <%= form.label "Oda Kapasitesi", class: "form-check-label" %>
                                  <%= form.number_field :capacity, placeholder: '2', class: "form-control" %> <br>
                                  <%= form.label "Oda Fiyatı", class: "form-check-label" %>
                                  <%= form.text_field :price, placeholder: '599', class: "form-control" %> <br>
                                  <%= form.label "Oda Açıklaması", class: "form-check-label" %>
                                  <%= form.text_field :description, placeholder: 'Bu oda 2 kişiliktir. Televizyon ....', class: "form-control" %> <br>
                                  <%= form.label "Oda Durumu", class: "form-check-label" %>
                                  <%= form.text_field :status, placeholder: 'Lütfen sadece 0 veya 1 değerlerini giriniz. (0 = Müsait, 1 = Müsait değil.)', class: "form-control" %> <br>
                                  <%= form.label "Fotoğraflar", class: "form-check-label" %> <br>
                                  <div class="custom-file">
                                    <%= form.file_field :photos, multiple: true %> <br>
                                  </div>
                                  <br> <br>
                                  <%= form.submit 'Oda Düzenle', class: "btn btn-primary" %>
                                </div>
                              <% end %>
                            </div>
                        </div>
                    </div>

    
  </div>
</div>